<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.Cursor?>
<VBox alignment="BOTTOM_CENTER" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Arc fill="#fbff1f" length="270.0" radiusX="189.0" radiusY="180.0" startAngle="45.0" stroke="BLACK" strokeType="INSIDE" type="ROUND">
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
      </Arc>
      <Button fx:id="newGameBtn" alignment="CENTER" onAction="#handleButtonClick" mnemonicParsing="false" prefWidth="300.0" style="-fx-background-color: green" text="Start new game" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="15.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
          <cursor>
              <Cursor fx:constant="HAND" />
          </cursor>
      </Button>
       <Button fx:id="topScoresBtn" mnemonicParsing="false" onAction="#handleButtonClick" prefWidth="300.0" style="-fx-background-color: green;" text="Check top scores" textAlignment="CENTER" textFill="WHITE">
         <font>
             <Font name="Calibri Bold" size="15.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
           <cursor>
               <Cursor fx:constant="HAND" />
           </cursor>
       </Button>
       <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#handleButtonClick" prefWidth="300.0" style="-fx-background-color: green" text="Exit game" textAlignment="CENTER" textFill="WHITE">
         <font>
             <Font name="Calibri Bold" size="15.0" />
         </font>
         <VBox.margin>
           <Insets bottom="30.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
           <cursor>
               <Cursor fx:constant="HAND" />
           </cursor>
       </Button>
   </children>
</VBox>
