<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="topScorePage" alignment="BOTTOM_CENTER" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
      <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="TOP 10 SCORES" textAlignment="CENTER">
         <font>
            <Font name="Calibri Bold" size="41.0" />
         </font>
         <effect>
            <Reflection bottomOpacity="0.11" fraction="0.63" topOffset="-10.0" topOpacity="0.57" />
         </effect></Text>
      <FlowPane alignment="BOTTOM_CENTER" columnHalignment="CENTER" prefHeight="505.0" prefWidth="600.0">
         <children>
              <Button fx:id="backToMenuBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleButtonClick" prefWidth="300.0" style="-fx-background-color: green" text="Go back to menu" textAlignment="CENTER" textFill="WHITE">
                  <font>
                      <Font name="Calibri Bold" size="15.0" />
                  </font>
               <FlowPane.margin>
                  <Insets bottom="30.0" />
               </FlowPane.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
              </Button>
         </children>
      </FlowPane>
    </children>
</VBox>
